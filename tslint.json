{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-eslint-rules"
    ],
    "rules": {
        "ter-indent": [
            true,
            4
        ],
        "only-arrow-functions": [
            true,
            "allow-named-functions"
        ],
        "quotemark": [
            true,
            "single"
        ],
        "trailing-comma": [
            false
        ],
        "object-literal-sort-keys": [
            false
        ],
        "ordered-imports": [
            false
        ],
        "prefer-const": [
            true
        ],
        "no-default-export": false,
        "no-require-imports": true,
        "align": [
            true, 
            "parameters", 
            "statements"
        ],
        "no-irregular-whitespace": true,
        "no-trailing-whitespace": true,
        "semicolon": [
            true, 
            "always"
        ],
        "space-before-function-paren": [
            true, 
            "always"
        ],
        "whitespace": [
            true, 
            "check-branch", 
            "check-operator", 
            "check-typecast",
            "check-decl",
            "check-module",
            "check-preblock",
            "check-separator"
        ],
        "no-console": [
            false
        ],
        "max-line-length": [
            false
        ],
        "typedef": [
            true,
            "call-signature",
            "parameter",
            "member-variable-declaration",
            "arrow-parameter",
            "property-declaration",
            "variable-declaration"
        ],
        "no-magic-numbers": [
            true
        ],
        "no-reference": true,
        "curly": true,
        "no-string-literal": true,
        "no-string-throw": true,
        "no-var-keyword": true,
        "switch-default": true,
        "triple-equals": true,
        "eofline": true,
        "arrow-return-shorthand": true,
        "interface-name": [
            "always-prefix"
        ],
        "no-consecutive-blank-lines": true,
        "object-literal-shorthand": true,
        "prefer-template": true,
        "space-in-parens": [
            "error",
            "always"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "func-call-spacing": [
            "error",
            "always"
        ],
        "array-bracket-spacing": [
            "error",
            "always"
        ]
    }
}
